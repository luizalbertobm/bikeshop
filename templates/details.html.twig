{% extends "layout.html.twig" %}

{% block content %}

	<div class="breadcumbs">
		<a href="/">Homepage</a>
		&raquo;
	</div>

	<div class="product-details">

		<div>
			{% if bike.image %}
				<a href="/products/{{bike.id}}" alt=""><img src="/images/{{bike.image}}" alt=""/></a>
			{% endif %}
		</div>
		<div>
			<h1>{{bike.name}}</h1>
			<p>${{bike.price}}</p>
            <form method="post">
            {% if inBasket %}
            <button>Added to basket</button>
            {% else %}
            <button>Add to basket</button>
            {% endif %}
            </form>
		</div>

	</div>

	{% if bike.description %}
		{{bike.description}}
	{% endif %}
{% endblock %}
